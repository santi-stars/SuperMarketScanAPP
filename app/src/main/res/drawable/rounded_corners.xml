<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#88000000"/> <!-- Color de la sombra -->
            <corners android:radius="18dp"/> <!-- Radio ligeramente mayor que el fondo para el efecto de sombra -->
            <padding android:bottom="6dp" android:right="6dp"/>
        </shape>
    </item>

    <!-- Fondo con esquinas redondeadas -->
    <item android:top="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- o cualquier color de fondo que desees -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

</layer-list>

