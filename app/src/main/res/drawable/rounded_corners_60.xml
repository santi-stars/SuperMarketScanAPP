<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#54000000" /> <!-- Color de la sombra -->
            <corners
                android:bottomRightRadius="60dp"
                android:radius="15dp"
                android:topLeftRadius="60dp" />
            <padding
                android:bottom="6dp"
                android:right="3dp" />
        </shape>
    </item>

    <!-- Fondo con esquinas redondeadas -->
    <item
        android:left="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- o cualquier color de fondo que desees -->
            <corners
                android:bottomRightRadius="60dp"
                android:radius="15dp"
                android:topLeftRadius="60dp" />
        </shape>
    </item>

</layer-list>

