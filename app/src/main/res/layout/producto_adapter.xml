<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:paddingHorizontal="3dp"
    android:paddingVertical="3dp">

<!--    <androidx.cardview.widget.CardView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="90dp"-->
<!--        android:background="#E1F4F2"-->
<!--        tools:layout_editor_absoluteX="3dp"-->
<!--        tools:layout_editor_absoluteY="3dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_33"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <!--            <androidx.cardview.widget.CardView-->
            <!--                android:layout_width="90dp"-->
            <!--                android:layout_height="90dp"-->
            <!--                app:cardCornerRadius="12dp">-->

            <ImageView
                android:id="@+id/product_item_imageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_corners_24"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/calculator_fire" />
            <!--                    android:background="@drawable/custom_button"-->


            <!--            </androidx.cardview.widget.CardView>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/product_nombre_adapter"
                        android:layout_width="180dp"
                        android:layout_height="33dp"
                        android:background="#00FFFFFF"
                        android:backgroundTint="#00FFFFFF"
                        android:gravity="start|center_vertical"
                        android:paddingStart="6dp"
                        android:text="nombre"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <TextView
                        android:id="@+id/product_cant_adapter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00FFFFFF"
                        android:backgroundTint="#00FFFFFF"
                        android:gravity="center_vertical|end"
                        android:paddingStart="6dp"
                        android:paddingEnd="15dp"
                        android:text="x6"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/product_desc_adapter"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="#00FFFFFF"
                        android:backgroundTint="#00FFFFFF"
                        android:gravity="start|center_vertical"
                        android:maxLines="3"
                        android:paddingStart="6dp"
                        android:text="precio producto"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <TextView
                        android:id="@+id/product_precio_adapter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00FFFFFF"
                        android:backgroundTint="#00FFFFFF"
                        android:gravity="center_vertical|end"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="precioâ‚¬"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
<!--    </androidx.cardview.widget.CardView>-->

</androidx.constraintlayout.widget.ConstraintLayout>
